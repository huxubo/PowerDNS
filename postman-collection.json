			"item": [
				{
					"name": "获取服务器列表",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has server data\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.be.an('array');",
									"    pm.expect(jsonData.length).to.be.at.least(1);",
									"});",
									"",
									"pm.test(\"Server has required fields\", function () {",
									"    var jsonData = pm.response.json();",
									"    var server = jsonData[0];",
									"    pm.expect(server).to.have.property('id');",
									"    pm.expect(server).to.have.property('type');",
									"    pm.expect(server).to.have.property('version');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "X-API-Key",
								"value": "{{api_key}}",
								"type": "text"
							},
